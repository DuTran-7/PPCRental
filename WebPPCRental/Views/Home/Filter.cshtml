<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 ">
            <div style="border:none" class="thumbnail">
                <img src="/Images/@item.Avatar" alt="@item.PropertyName" />
                <div class="caption">
                    <div style="float:left; height:100px; width:250px; margin-top:0px" id="left">
                        <h4>@item.PropertyName.Substring(0, 16)</h4>
                        <p> @item.Content.Substring(0, 70)  ...</p>
                    </div>
                    <div id="right" style="float: right; height: 100px; width: 80px; margin-top:5px">
                        <strong style="color:red; font-size: 140%">$@item.Price</strong>

                        @*<p style=" margin-top:30px">@Html.ActionLink("Detail", "Detail", new { @item.ID })</p>*@
                        <p style="margin-top:20px"><a href="/Property/Detail/@item.ID">Detail >></a> </p>
                    </div>


                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
        $(function () {
            $('#Quan').change(function () {
                document.location = '@Url.Action("Filter","Home")?filter=' + $(this).val();
            });
        })
    </script>
}